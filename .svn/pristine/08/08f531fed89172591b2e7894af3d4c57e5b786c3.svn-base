/**
 * @summary Adds a bottom border to an element
 *
 * @selector .ocps-border_bottom
 * @modifier
 * @group position
 */
.ocps-border_bottom,
.ocps-border--bottom {
  border-bottom: @sizing-border-xxx-small solid @color-border-default;
}

